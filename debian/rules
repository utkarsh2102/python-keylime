#!/usr/bin/make -f

export PYBUILD_NAME=keylime
export PYBUILD_DISABLE=test
export KEYLIME_CONFIG=$(CURDIR)/keylime.conf

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_installsystemd:
	dh_installsystemd -p python3-keylime --name keylime_agent
	dh_installsystemd -p python3-keylime --name keylime_registrar
	dh_installsystemd -p python3-keylime --name keylime_verifier
