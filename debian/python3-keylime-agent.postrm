#!/bin/sh

set -e

KEYLIME_DIR=/var/lib/keylime
KEYLIME_MOUNT=/var/lib/keylime/secure


if [ "$1" = "purge" ]; then
  # umount /var/lib/keylime/secure if it's mounted.
  if grep -qs '/var/lib/keylime/secure' /proc/mounts; then
    umount $KEYLIME_MOUNT
  fi

  # remove /var/lib/keylime directory.
  if [ -d $KEYLIME_DIR ]; then
    rm -rf $KEYLIME_DIR
  fi
fi

